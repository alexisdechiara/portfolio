---
export interface Props {
	title: string;
	content: string[];
}

const { title, content } = Astro.props;
---

<div class="flex flex-col justify-center items-center mb-8">
	<h3 class="text-xl text-primary-dark dark:text-primary-light font-medium pb-2">{title}</h3>
	{
		content.map(item => (
			<>
				<span class="text-md mb-2 text-center">{item}</span>
			</>
		))
	}
</div>

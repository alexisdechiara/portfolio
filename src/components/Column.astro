---
export interface Props {
  title: string;
  content: string[];
}

const { title, content } = Astro.props;
---

<div class="flex flex-col justify-center items-center mb-8">
  <h3 class="text-xl text-primary-dark font-medium pb-2">{title}</h3>
  {content.map((item) => (
    <>
    <span class="text-md text-center mb-2">{item}</span>
    </>
  ))}
</div>
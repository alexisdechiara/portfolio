---
import { t } from "i18next";

export interface Props {
	title: string;
	location: string;
	description: string;
	website: string;
	map: string;
}

const { title, location, description, website, map } = Astro.props;
---

<div class="flex flex-col p-11 border-[3px] hover:bg-primary-dark dark:hover:bg-primary dark:border-primary hover:text-white border-primary-dark w-[500px] h-[300px] transition duration-75 ease-in-out">
	<h4 class="text-2xl font-bold dark:text-gray-100">{title}</h4>
	<span class="text-lg font-light dark:text-gray-100"> {location}</span>
	<p class="font-medium text-justify py-2 grow dark:text-gray-100">{description}</p>
	<div class="flex justify-end space-x-2">
		<a href={website} target="_blank" class="bg-primary dark:bg-primary-light hover:bg-primary-light text-white p-2 transition duration-75 ease-in-out capitalize"> {t("block.website")}</a>
		<a href={map} target="_blank" class="bg-primary dark:bg-primary-light hover:bg-primary-light text-white p-2 transition duration-75 ease-in-out capitalize"> {t("block.map")}</a>
	</div>
</div>

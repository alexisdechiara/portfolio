---
import { Image } from "@astrojs/image/components";
import { Icon } from "astro-icon";

export interface Props {
	content: {
		url: string;
		title: string;
		description: string;
		git: string;
		website: string;
		tools: Array<string>;
	};
}

let { content } = Astro.props;
---

<div class="flex flex-col items-start justify-start rounded-lg border border-gray-100 shadow-lg transition duration-75 hover:translate-y-1 hover:shadow-md dark:border-gray-800 dark:bg-gray-800 dark:shadow-gray-900">
	<a href={content.website} aria-label="alt" rel="external">
		<Image src={content.url} alt="" width={1080} aspectRatio={16 / 9} class="rounded-t-lg" />
	</a>
	<div class="flex w-full flex-col px-4 py-4">
		<h4 class="pb-1 text-lg font-bold text-gray-900 dark:text-gray-100">{content.title}</h4>
		<span class="pb-2 text-justify text-sm font-medium text-gray-500 dark:text-gray-300">{content.description}</span>
		<div class="mr-4 flex justify-between space-x-4 py-2">
			<div class="flex touch-pan-x snap-x flex-nowrap gap-2 overflow-x-auto scrollbar-none">
				{content.tools.map((tool) => <span class="shrink-0 snap-mandatory snap-start rounded-full bg-gray-200 px-3 py-1 text-gray-500 dark:bg-gray-600 dark:text-gray-300">{tool} </span>)}
			</div>
			<div class="flex">
				<a href={content.git} aria-label={` ${content.title} source`} rel="external" target="_blank"><Icon class="h-7 w-7 dark:text-gray-50" pack="simple-icons" name="github" /></a>
				<a href={content.website} aria-label={` ${content.title} website`} rel="external" target="_blank" aria-hidden="true" class="hidden"><Icon class="h-6 w-6" pack="ph" name="arrow-square-out-light" /></a>
			</div>
		</div>
	</div>
</div>

---
import { Image } from "@astrojs/image/components";
import { Icon } from "astro-icon";

export interface Props {
	content: {
		url: string;
		title: string;
		description: string;
		git: string;
		website: string;
		tools: Array<string>;
	}
}

let { content } = Astro.props;
---

<div class="flex flex-col rounded-lg justify-start items-start shadow-lg dark:shadow-gray-900 dark:border-gray-800 dark:bg-gray-800 hover:shadow-md hover:translate-y-1 transition duration-75 border border-gray-100">
	<a href={content.website} aria-label="alt" rel="external">
		<Image src={content.url} alt="" width="1080" aspectRatio={16 / 9} class="rounded-t-lg" />
	</a>
	<div class="flex flex-col px-4 py-4 w-full">
		<h4 class="text-lg font-bold text-gray-900 pb-1 dark:text-gray-100">{content.title}</h4>
		<span class="text-sm font-medium text-justify pb-2 text-gray-500 dark:text-gray-300">{content.description}</span>
		<div class="flex justify-between space-x-4 mr-4 py-2">
			<div class="flex gap-2 flex-nowrap overflow-x-auto touch-pan-x scrollbar-none snap-x">
				{content.tools.map(tool => <span class="snap-start snap-mandatory shrink-0 bg-gray-200 dark:bg-gray-600 py-1 px-3 rounded-full text-gray-500 dark:text-gray-300">{tool} </span>)}
			</div>
			<div class="flex">
				<a href={content.git} aria-label={` ${content.title} source`} rel="external" target="_blank"
					><Icon class="h-7 w-7 dark:text-gray-50" pack="simple-icons" name="github" />
				</a>
				<a href={content.website} aria-label={` ${content.title} website`} rel="external" target="_blank" aria-hidden="true" class="hidden"
					><Icon class="h-6 w-6" pack="ph" name="arrow-square-out-light" />
				</a>
			</div>
		</div>
	</div>
</div>

---
import { Image, Picture } from "@astrojs/image/components";
import { Icon } from "astro-icon";

export interface Props {
	content : { 
		url: string;
		alt: string;
		title: string;
		description: string;
		git: string;
		website: string;
	}
}

let { content } = Astro.props;
---

<div class="flex flex-col rounded-lg justify-start items-start shadow-lg dark:shadow-gray-900 dark:border-gray-800 dark:bg-gray-800 hover:shadow-md hover:translate-y-1 transition duration-75 border border-gray-100">
	<a href={content.website}>
		<Image alt={content.alt} src={content.url} width="1080" aspectRatio={16 / 9} class="rounded-t-lg" />
	</a>
	<div class="flex flex-col px-4 py-4 w-full">
		<h4 class="text-lg font-bold text-gray-900 pb-1 dark:text-gray-100">{content.title}</h4>
		<span class="text-sm font-medium text-justify pb-2 text-gray-500 dark:text-gray-300">{content.description}</span>
		<div class="flex justify-end space-x-4 mr-4 pb-2">
			<a href={content.git} target="_blank"><Icon class="h-7 w-7 dark:text-gray-50" pack="simple-icons" name="github" /></a>
			<a href={content.website} target="_blank" aria-hidden="true" class="hidden"><Icon class="h-6 w-6" pack="ph" name="arrow-square-out-light" /></a>
		</div>
	</div>
</div>

	<div class="flex flex-col">
		<span class="pb-2 block text-lg font-bold capitalize"> couleur </span>
		<div class="grid grid-cols-3 gap-6 font-medium px-4">
			{palette.map((color)=> (
				<label>
					<input type="radio" class="sr-only peer" value={color} name="colorSwitcher" id={`${color}-button`}/>
					<span for="colorSwitcher" class={`flex justify-center items-center transition bg-${color}-500 peer-checked:rounded-full peer-checked:hover:scale-100 peer-checked:cursor-default rounded-xl hover:scale-105 cursor-pointer h-12 w-12`} id={color} />
				</label>
				))}
				<label>
					<input type="radio" class="sr-only peer" value="random" name="colorSwitcher" id="random-button"/>
					<Icon pack="ph" name="shuffle-angular" for="colorSwitcher" class="flex p-2 bg-gray-200 justify-center items-center transition peer-checked:rounded-full peer-checked:hover:scale-100 rounded-xl hover:scale-105 cursor-pointer h-12 w-12" id="random" />
				</label>
		</div>
	</div>
	<div class="flex flex-col">
		<span class="pb-2 block text-lg font-bold capitalize"> thème </span>
		<div class="grid grid-cols-3 gap-4 font-medium px-4">
			<label>
				<input type="radio" class="sr-only peer" value="light" name="darkModeSwitcher" id="lightModeInput">
				<Icon class="w-12 h-12 p-2 peer-checked:bg-gray-200 peer-checked:rounded-full peer-checked:cursor-default cursor-pointer" pack="ph" name="sun" id="lightMode" for="darkModeSwitcher"/>
			</label>
			<label>
				<input type="radio" class="sr-only peer" value="auto" name="darkModeSwitcher" id="autoModeInput">
				<Icon class="w-12 h-12 p-2 peer-checked:bg-gray-200 peer-checked:rounded-full peer-checked:cursor-default cursor-pointer" pack="ph" name="arrows-counter-clockwise" for="darkModeSwitcher"/>
			</label>
			<label>
				<input type="radio" class="sr-only peer" value="dark" name="darkModeSwitcher" id="darkModeInput">
				<Icon class="w-12 h-12 p-2 peer-checked:bg-gray-200 peer-checked:rounded-full peer-checked:cursor-default cursor-pointer" pack="ph" name="moon" for="darkModeSwitcher"/>
			</label>
		</div>
	</div>
</div>
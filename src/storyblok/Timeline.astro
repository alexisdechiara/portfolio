---
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";
import { storyblokEditable } from "@storyblok/astro";
const { blok } = Astro.props;
---

<section class="my-24 flex flex-col items-center justify-center">
	<div class="mb-24 text-center">
		<h3 class="pb-2 text-center text-4xl font-bold dark:text-gray-100">{blok.title}</h3>
		<span class="text-xl font-medium dark:text-gray-100">{blok.description}</span>
	</div>
	<div class="relative flex w-full flex-col space-y-16 pr-4 tablet:px-24">
		<span class="absolute mb-16 h-full w-2 -translate-x-1 bg-primary-dark dark:bg-primary tablet:left-1/2"></span>
		<Fragment {...storyblokEditable(blok)}>
			{
				blok.lines?.map((blok) => {
					return <StoryblokComponent blok={blok} />;
				})
			}
		</Fragment>
	</div>
	<div class="relative h-32 w-full">
		<span class="absolute -mt-1 h-full -translate-x-1 border-r-8 border-dashed border-primary-dark dark:border-primary tablet:left-1/2"></span>
		<div class="absolute h-full w-full bg-gradient-to-t from-white dark:from-gray-900"></div>
	</div>
</section>

---
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";
import { storyblokEditable } from "@storyblok/astro";
import { Icon } from "astro-iconify";
const { blok, isLastColumn } = Astro.props;
---

<div class:list={[isLastColumn || "dark:border-gray-700 tablet:border-r", "flex-1 flex-col items-center w-full px-8 justify-center laptop:px-12 py-8"]} {...storyblokEditable(blok)}>
	<div class="mb-8 flex flex-col items-center justify-center">
		{blok.icon_pack && blok.icon_name && <Icon class="mb-8 w-24 rounded-full bg-gray-100 p-4 text-primary dark:bg-gray-700 dark:text-primary-light" pack={blok.icon_pack} name={blok.icon_name} />}
		<h3 class="pb-2 text-center text-2xl font-bold">{blok.title}</h3>
		<span class="text-md text-center">{blok.description}</span>
	</div>
	{
		blok.cells?.map((blok) => {
			return <StoryblokComponent blok={blok} />;
		})
	}
</div>

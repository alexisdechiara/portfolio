---
import { storyblokEditable, renderRichText } from "@storyblok/astro";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";
const { blok } = Astro.props;
---

<section class:list={[blok.background_color, blok.custom_class, "w-full flex h-fit flex-col items-center justify-start py-16 tablet:py-24"]} id={blok.tag} {...storyblokEditable(blok)}>
	<div class:list={[blok.text_color, "flex max-w-lg flex-col pb-8 tablet:max-w-3xl px-8 tablet:px-16 laptop:max-w-5xl"]}>
		<span class="pb-4 text-center text-sm font-bold uppercase tracking-wider">{blok.name}</span>
		<h3 class="pb-4 text-center text-4xl font-bold">{blok.title}</h3>
		<span class="text-justify text-xl font-medium tablet:text-center">
			<Fragment set:html={renderRichText(blok.description)} />
		</span>
	</div>
	<article class="relative flex h-fit w-full flex-col items-center justify-start">
		{
			blok.content?.map((blok) => {
				return <StoryblokComponent blok={blok} />;
			})
		}
	</article>
</section>

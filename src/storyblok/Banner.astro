---
import { storyblokEditable } from "@storyblok/astro";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";
const { blok } = Astro.props;
---

<section class:list={[blok.background_color, "w-fill flex h-fit flex-col items-center justify-start"]}>
	<div class:list={[blok.text_color, "flex max-w-lg flex-col pb-8 pt-16 tablet:max-w-3xl tablet:pb-16 tablet:pt-24 laptop:max-w-5xl"]}>
		<h3 class="pb-4 text-center text-4xl font-bold">{blok.title}</h3>
		<span class="text-justify text-xl font-medium tablet:text-center">{blok.description}</span>
	</div>
	<article class="relative flex h-fit flex-col items-center justify-start" {...storyblokEditable(blok)}>
		{
			blok.content?.map((blok) => {
				return <StoryblokComponent blok={blok} />;
			})
		}
	</article>
</section>
